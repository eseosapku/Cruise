{
  "name": "cruise-platform",
  "version": "1.0.0",
  "description": "Desktop AI-powered entrepreneurship accelerator with glassmorphism UI design.",
  "main": "public/electron.js",
  "scripts": {
    "start": "concurrently \"npm run backend:dev\" \"npm run frontend:start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:start\"",
    "electron": "electron .",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:build": "tsc -p backend/tsconfig.json",
    "backend:dev": "nodemon backend/src/server.ts",
    "backend:start": "node backend/dist/server.js",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.2.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "electron": "^25.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.6.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "node-notifier": "^10.0.1",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.1",
    "sequelize": "^6.25.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cheerio": "^0.22.31",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.6.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/cruise-platform.git"
  },
  "keywords": [
    "AI",
    "entrepreneurship",
    "accelerator",
    "web scraping",
    "LinkedIn",
    "pitch deck"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/cruise-platform/issues"
  },
  "homepage": "https://github.com/yourusername/cruise-platform#readme",
  "build": {
    "appId": "com.cruise.platform",
    "productName": "Cruise Platform",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "backend/dist/**/*",
      "frontend/build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
