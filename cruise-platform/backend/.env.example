# Cruise Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration (Choose one method)
# Method 1: Supabase Connection String (Recommended)
DATABASE_URL=postgres://username:password@localhost:5432/cruise_platform

# Method 2: Traditional PostgreSQL Connection
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cruise_platform
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_please_make_it_long_and_random
JWT_EXPIRES_IN=24h

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_PROJECT_ID=your_google_cloud_project_id

# Bing Search API (Microsoft Azure)
BING_SEARCH_API_KEY=your_bing_search_api_key
BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/search
BING_IMAGE_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/images/search

# Unsplash API
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# Pexels API
PEXELS_API_KEY=your_pexels_api_key

# LinkedIn API (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# AI Image Generation (Optional)
OPENAI_API_KEY=your_openai_api_key_for_dall_e
STABILITY_AI_API_KEY=your_stability_ai_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password